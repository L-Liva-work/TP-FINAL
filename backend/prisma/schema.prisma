generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Proyecto {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  date        DateTime
  descripcion String
  creador     Person   @relation(fields: [creadorId], references: [id])
  creadorId   Int


model Proyecto{
	id Int @id @default(autoincrement())
	name String	@unique
	date DateTime
	descripcion String
	creador Person @relation(fields: [creadorId], references: [id])
	creadorId Int
	}

model Person{
	id Int @id @default(autoincrement())
	email String @unique
	nombre String 
	doc Int @unique
	puesto String
	telefono BigInt

	Proyectos Proyecto[]
  
}

model Tasks {
  id          Int      @id @default(autoincrement())
  name        String
  priority    String
  description String?
  startDate   DateTime @default(dbgenerated("CURRENT_DATE")) @db.Date
  endDate     DateTime @default(dbgenerated("CURRENT_DATE + interval '1 month'")) @db.Date

  task UnlockTasks[]
}

model UnlockTasks {
  proyect_id Int
  proyect    Proyecto @relation(fields: [proyect_id], references: [id])
  task_id    Int
  task       Tasks    @relation(fields: [task_id], references: [id])

  @@unique([proyect_id, task_id])
}
