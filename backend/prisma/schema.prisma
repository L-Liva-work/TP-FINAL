generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model Projects{
	id Int @id @default(autoincrement())
	name String	@unique
	startdate	DateTime @default(dbgenerated("CURRENT_DATE")) @db.Date 
	enddate DateTime
	descripcion String

  	task UnlockTasks[]
	person relPersonProjects[]
	}

model Person{
	id Int @id @default(autoincrement())
	email String @unique
	nombre String 
	doc Int @unique
	puesto String
	telefono BigInt
  
	person relPersonProjects[]
}

model Tasks {
  id          Int      @id @default(autoincrement())
  name        String
  priority    String
  description String?
  startDate   DateTime @default(dbgenerated("CURRENT_DATE")) @db.Date
  endDate     DateTime @default(dbgenerated("CURRENT_DATE + interval '1 month'")) @db.Date

  task UnlockTasks[]
}

model UnlockTasks {
  project_id Int
  project    Projects @relation(fields: [project_id], references: [id])
  task_id    Int
  task       Tasks    @relation(fields: [task_id], references: [id])

  @@unique([project_id, task_id])
}

model relPersonProjects {
  id  Int @id @default(autoincrement())
  
  project_id Int
  project Projects @relation(fields: [project_id], references:[id])
  person_id Int
  person Person @relation(fields: [person_id], references:[id])

}
